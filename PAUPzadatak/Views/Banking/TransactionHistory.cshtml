@model IEnumerable<PAUPzadatak.Models.TransactionViewModel>

@{
    ViewBag.Title = "Transaction History";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Transaction History</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Amount</th>
                                <th>Balance After</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model)
                            {
                                <tr>
                                    <td>@transaction.TransactionDate.ToString("MM/dd/yyyy HH:mm")</td>
                                    <td>@transaction.Type</td>
                                    <td>@transaction.Description</td>
                                    <td>@String.Format("{0:C}", transaction.Amount)</td>
                                    <td>@String.Format("{0:C}", transaction.BalanceAfterTransaction)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.ActionLink("Back to Dashboard", "Dashboard", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
</div> 